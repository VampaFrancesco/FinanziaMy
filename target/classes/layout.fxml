<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="20">
    <StackPane>
        <Circle fx:id="circle" radius="100" stroke="BLACK" fill="LIGHTGRAY" />
        <Text fx:id="totalText" text='$ ' style="-fx-font-size: 20px;" />
    </StackPane>
    <Slider fx:id="slider" min="-500" max="500" value="0" showTickLabels="true" showTickMarks="true" />
</VBox>
